{
  "compilerOptions": {
    "target": "es2021",
    "module": "CommonJs",
    "allowJs": true,
    "rootDir": "./src",
    "outDir": "./build",
    "strict": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "lib": ["ES2022", "dom"]
  },
  "include": ["src/enviroment.d.ts", "./src/**/*", "./tests/**/*"],
  "exclude": ["./node_modules"]
}
